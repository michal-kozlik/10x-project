---
import "../styles/global.css";
import { Toaster } from "@/components/Toaster";

interface Props {
  title?: string;
  subtitle?: string;
}

const props = Astro.props as Props;
const { title = "Witaj ponownie", subtitle } = props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-background to-muted text-foreground">
    <div class="flex min-h-screen flex-col items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <header class="mb-8 text-center">
          <h1 class="text-3xl font-semibold tracking-tight text-foreground">{title}</h1>
          {subtitle && (
            <p class="mt-2 text-sm text-muted-foreground">{subtitle}</p>
          )}
        </header>
        <slot />
      </div>
    </div>
    <Toaster client:load />
  </body>
</html>
